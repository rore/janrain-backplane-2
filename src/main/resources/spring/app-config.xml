<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- pre-load system properties from application context, if it exists -->
    <bean id="loadSystemProps" class="com.janrain.backplane.config.BackplaneSystemProps">
        <constructor-arg type="java.lang.String"><value>/log4j_special.xml</value></constructor-arg>
    </bean>

	<!-- Scans the classpath of this application for @Components to deploy as beans -->
	<context:component-scan base-package="com.janrain" />


	<!-- Application Message Bundle -->
	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="/WEB-INF/messages/messages" />
		<property name="cacheSeconds" value="0" />
	</bean>

    <!-- Configures Spring MVC -->
    <!--
    <import resource="mvc-config.xml" />
    -->

    <bean id="bpIdFilter" class="com.janrain.backplane.servlet.InstanceIdFilter" />
    <bean id="jsonpFilter" class="com.janrain.backplane.servlet.JsonpCallbackFilter" />

    <bean id="bpConfig" class="com.janrain.backplane.config.BackplaneConfig"/>
    <bean id="bpConfig2" class="com.janrain.backplane.config.BackplaneConfig"/>

</beans>
